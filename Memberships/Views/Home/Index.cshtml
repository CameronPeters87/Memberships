@model IEnumerable<Memberships.Models.ThumbnailAreaModel>
@using Memberships.Models
@{
    ViewBag.Title = "Home Page";
}


<div class="row">
    @if (User.Identity.IsAuthenticated)
    {
        foreach (var area in Model)
        {
            @Html.Partial("_ThumbnailAreaPartial", area)
        }
    }
    else
    {
        //Left Column
        <div class="col-lg-9 col-md-8 col-sm-7">
            <h2>Not Logged In</h2>
        </div>
        //Right Column
        <div class="col-lg-3 col-md-4 col-sm-5">
            @Html.Partial("_RegisterUserPartial", new RegisterUserModel
            {
                Email = "",
                Name = "",
                Password = ""
            })
            @Html.Partial("_ForgotPasswordPanelPartial", new ForgotPasswordViewModel
            {
                Email = ""
            })
        </div>
    }
</div>
<div class="row">
    <div class="col-sm-3">
        @Html.Partial("_RegisterCodePartial")
    </div>
    <div class="col-sm-9"></div>
</div>
